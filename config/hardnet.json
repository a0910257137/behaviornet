{
    "train_batch_size": 10,
    "test_batch_size": 10,
    "epochs": 65,
    "learn_rate": 0.001,
    "model_path": "/aidata/anders/objects/split_hico/archive_model/hardnet",
    "summary": {
        "scalar_freq": 50,
        "hist_freq": 150,
        "img_freq": 250,
        "log_dir": "/aidata/anders/objects/split_hico/archive_model/hardnet/logs/"
    },
    "data_reader": {
        "max_obj_num": 15,
        "resize_size": [
            192, // height
            320 // width
        ],
        "img_down_ratio": 0.5, //[height, width]
        "shuffle": true,
        "tasks": [
            {
                "preprocess": "obj_det",
                "read_img": true,
                "branches": [
                    "obj_center",
                    "tl",
                    "br"
                ],
                "category_path": "./config/cates.txt",
                "train_folder": "/aidata/anders/objects/split_hico/kps/train_kps",
                "test_folder": "/aidata/anders/objects/split_hico/kps/test_kps"
            }
        ],
        "augments": {
            "color_chains": [
                "contrast",
                "saturat",
                "bright",
                "hue"
            ],
            "tensorpack_aug_chain": [], //"CropTransform","RandomPaste","JpegNoise","GaussianNoise","SaltPepperNoise"
            "do_flip": true
        },
        "coors_down_ratio": [
            0.5,
            0.5
        ], //[height, width]
        "img_root": "/aidata/anders/objects/hico/imgs"
    },
    "models": {
        "model_name": "obj_det",
        "frozen_backbone": false,
        "multi_optimizer": false,
        "optimizer": "adam",
        "backbone": {
            "module_name": "hardnet",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lr": 1e-3
        },
        "neck": {
            "module_name": "fpn",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lr": 1e-3,
            "structure": {
                "inter_ch": 32,
                "skip_conv_ch": [
                    32,
                    32,
                    32,
                    0
                ],
                "up_growth_layer": [
                    48,
                    32,
                    20,
                    14
                ],
                "up_n_layers": [
                    8,
                    8,
                    8,
                    4
                ]
            }
        },
        "head": {
            "module_name": "head",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lr": 1e-3,
            "pred_layer": {
                "heat_maps": [
                    {
                        "name": "obj_heat_map",
                        "out_dims": 1
                    }
                ],
                "size_maps": [
                    {
                        "name": "obj_size_maps",
                        "out_dims": 2
                    }
                ]
            }
        },
        "loss": { //weighted constant based on DETR paper
            "type": "center_od",
            "size_weight":0.5
        }
    }
}