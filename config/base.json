{
    "train_batch_size": 1,
    "test_batch_size": 1,
    "epochs": 45,
    "learn_rate": 0.001,
    "model_path": "/Users/poanchen/Desktop/projects/base",
    "summary": {
        "scalar_freq": 50,
        "hist_freq": 150,
        "img_freq": 250,
        "log_dir": "/Users/poanchen/Desktop/projects/base/logs/"
    },
    "data_reader": {
        "max_obj_num": 15,
        "resize_size": [
            224, // height
            224 // width
        ],
        "img_down_ratio": 1, //[height, width]
        "shuffle": true,
        "tasks": [
            {
                "preprocess": "obj_det",
                "read_img": true,
                "branches": [
                    "obj_center",
                    "tl",
                    "br"
                ],
                "category_path": "./config/cate.txt",
                "train_folder": "/Users/poanchen/Downloads/hico/kps/train_kps",
                "test_folder": "/Users/poanchen/Downloads/hico/kps/test_kps"
            }
        ],
        "augments": {
            "color_chains": [
                "contrast",
                "saturat",
                "bright",
                "hue"
            ],
            "tensorpack_aug_chain": [], //"CropTransform","RandomPaste","JpegNoise","GaussianNoise","SaltPepperNoise"
            "do_flip": true
        },
        "coors_down_ratio": [
            1,
            1
        ], //[height, width]
        "img_root": "/Users/poanchen/Downloads/hico/imgs"
    },
    "models": {
        "model_name": "obj_det",
        "frozen_backbone": false,
        "multi_optimizer": false,
        "backbone": {
            "module_name": "mobilenet",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lr": 1e-3
        },
        "neck": {
            "module_name": "pan",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lateral_ch":[128, 128, 128],
            "lr": 1e-3
        },
        "head": {
            "module_name": "nanodet_head",
            "optimizer": "adam",
            "num_vars": null,
            "variables": null,
            "lr": 1e-3,
            "stacked_convs":2,
            "reg_max":7,
            "share_cls_reg":true, 
            "strides":[8, 16, 32], 
            "pred_layer": {
                "num_class": 80
            }
        },
        "loss": { //weighted constant based on DETR paper
            "type": "gfc",
            "strides": [8, 16, 32],
            "octave_base_scale": 5,
            "loss_qfl":
            {
                "name": "QualityFocalLoss",
                "use_sigmoid": true,
                "beta": 2.0,
                "loss_weight": 1.0
            },
            "loss_dfl":
            {
                "name": "DistributionFocalLoss",
                "loss_weight": 0.25
            },
            "loss_bbox":
            {
                "name": "GIoULoss",
                "loss_weight":  2.0
            }
        }
    }
}